<?xml version="1.0" encoding="utf-8"?>

<!--AddNewContactActivity:
Otvara se nakon pritiska na dugme "Add new contact" u HomeActivity layout-u
Sadrzi dugme Save koje sadrzi intent na HomeActivity-->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/addNewContact"
    tools:context="com.example.natasaandzic.domaci1.AddNewContactActivity">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Name:"
        android:textSize="30sp"
        android:textColor="#BA68C8"
        />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/nameTextView"/>

    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_below="@id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Last name:"
        android:textSize="30sp"
        android:textColor="#BA68C8"
        />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/lastNameTextView"/>

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Phone:"
        android:textSize="30sp"
        android:textColor="#BA68C8"
        android:layout_below="@id/lastNameEditText"
        />

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/phoneTextView"/>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Email:"
        android:textSize="30sp"
        android:textColor="#BA68C8"
        android:layout_below="@id/phoneEditText"
        />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/emailTextView"/>

    <Button
        android:id="@+id/saveButton"
        android:text="Save"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
