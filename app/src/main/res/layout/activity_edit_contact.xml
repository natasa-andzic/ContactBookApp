<?xml version="1.0" encoding="utf-8"?>

<!--EditContactActivity:
Dolazi se ovde kada se u HomeActivity klikne na konkretni kontakt
Dugme Save sacuva promene i vrati se na konkretni kontakt-->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.natasaandzic.domaci1.activity.EditContactActivity">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Name:"
        android:textSize="30sp"
        android:textColor="#BA68C8"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/et_add_contact_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/nameTextView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_below="@id/et_add_contact_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Last name:"
        android:textSize="30sp"
        android:textColor="#BA68C8"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/et_add_contact_surname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/lastNameTextView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/tv_add_contact_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Phone:"
        android:textSize="30sp"
        android:textColor="#BA68C8"
        android:layout_below="@id/et_add_contact_surname"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/et_add_contact_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_add_contact_phone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Email:"
        android:textSize="30sp"
        android:textColor="#BA68C8"
        android:layout_below="@id/et_add_contact_number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/et_add_contact_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/emailTextView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/saveButton"
        android:text="Save"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
